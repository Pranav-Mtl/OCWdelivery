<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context="com.example.appslure.ocwdelivery.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_image"
            />

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/signin_user_image"
            android:layout_marginTop="50dp"
            android:drawablePadding="8dp"
            android:hint="Mobile"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#e1e1e3"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/signin_password_image"
            android:layout_marginTop="40dp"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:background="@android:color/transparent"
            android:imeOptions="actionDone"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#e1e1e3"
            android:layout_marginTop="5dp"
            />


        <Button
            android:id="@+id/login_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customized_button"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="18sp"/>
    </LinearLayout>

